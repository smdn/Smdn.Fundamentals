<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0;net472;net45;netstandard2.1;netstandard2.0</TargetFrameworks>
    <VersionPrefix>3.0.4</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <PackageValidationBaselineVersion>3.0.0</PackageValidationBaselineVersion>
    <Nullable>enable</Nullable>
    <RootNamespace/> <!-- empty the root namespace so that the namespace is determined only by the directory name, for code style rule IDE0130 -->
    <NoWarn>CS1591;$(NoWarn)</NoWarn> <!-- CS1591: Missing XML comment for publicly visible type or member 'Type_or_Member' -->
  </PropertyGroup>

  <PropertyGroup Label="assembly attributes">
    <CopyrightYear>2021</CopyrightYear>
  </PropertyGroup>

  <PropertyGroup Label="package properties">
    <PackageTags>printable-encoding;base64;ICryptoTransform</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\Common\Smdn.Security.Cryptography\CryptoTransformUtils.ValidateArguments.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectOrPackageReference ReferencePackageVersion="[3.0.3,4.0.0)" Include="..\Smdn.Fundamental.CryptoTransform\Smdn.Fundamental.CryptoTransform.csproj" />
    <ProjectOrPackageReference ReferencePackageVersion="[3.0.3,4.0.0)" Include="..\Smdn.Fundamental.Exception\Smdn.Fundamental.Exception.csproj" />
    <!-- Smdn.IO.Streams.NonClosingStream NET472_OR_GREATER || NETSTANDARD2_0_OR_GREATER || NET5_0_OR_GREATER -->
    <ProjectOrPackageReference
      ReferencePackageVersion="[3.0.3,4.0.0)"
      Include="..\Smdn.Fundamental.Stream\Smdn.Fundamental.Stream.csproj"
      Condition="
        !$(TargetFramework.StartsWith('net5')) or
        !$(TargetFramework.StartsWith('net48')) or
        !$(TargetFramework.StartsWith('net472')) or
        !$(TargetFramework.StartsWith('netstandard2'))
      "
    />
  </ItemGroup>
</Project>
