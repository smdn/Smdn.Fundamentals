<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0;net45;netstandard2.1;netstandard1.6;netstandard1.3</TargetFrameworks>
    <VersionPrefix>3.0.2</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <PackageValidationBaselineVersion>3.0.0</PackageValidationBaselineVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Label="assembly attributes">
    <CopyrightYear>2021</CopyrightYear>
  </PropertyGroup>

  <PropertyGroup Label="package properties">
    <PackageTags>printable-encoding;quoted-printable;RFC2045;ICryptoTransform</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\Common\Smdn.Security.Cryptography\CryptoTransformUtils.ValidateArguments.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference ReferencePackageVersion="[3.0.2,4.0.0)" Include="..\Smdn.Fundamental.CryptoTransform\Smdn.Fundamental.CryptoTransform.csproj" />
    <ProjectReference ReferencePackageVersion="[3.0.3,4.0.0)" Include="..\Smdn.Fundamental.Exception\Smdn.Fundamental.Exception.csproj" />
    <ProjectReference ReferencePackageVersion="[3.0.1,4.0.0)" Include="..\Smdn.Fundamental.PrintableEncoding.Hexadecimal\Smdn.Fundamental.PrintableEncoding.Hexadecimal.csproj" />
    <!-- Smdn.IO.Streams.NonClosingStream NET472_OR_GREATER || NETSTANDARD2_0_OR_GREATER || NET5_0_OR_GREATER -->
    <ProjectReference
      ReferencePackageVersion="[3.0.3,4.0.0)"
      Include="..\Smdn.Fundamental.Stream\Smdn.Fundamental.Stream.csproj"
      Condition="
        !$(TargetFramework.StartsWith('net5')) or
        !$(TargetFramework.StartsWith('net48')) or
        !$(TargetFramework.StartsWith('net472')) or
        !$(TargetFramework.StartsWith('netstandard2'))
      "
    />
  </ItemGroup>
</Project>
