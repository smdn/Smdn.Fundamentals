<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard1.6</TargetFrameworks>
    <VersionPrefix>1.0.1</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <NoBuild>true</NoBuild>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <!--
      supress warning NU5128
      https://docs.microsoft.com/en-us/nuget/reference/errors-and-warnings/nu5128#scenario-2
    -->
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>

    <EnablePackageValidation>false</EnablePackageValidation>
    <APIListEnableGenerating>false</APIListEnableGenerating>
    <GeneratePackageReadmeFile>false</GeneratePackageReadmeFile>

    <_SmdnProjectAssets_ImportFromLocal>true</_SmdnProjectAssets_ImportFromLocal>
  </PropertyGroup>

  <PropertyGroup Label="assembly attributes">
    <Description>A package of MSBuild asset files common to the library projects.</Description>
    <CopyrightYear>2022</CopyrightYear>
  </PropertyGroup>

  <PropertyGroup Label="package properties">
    <PackageTags>MSBuild;project-assets;build-assets</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Pack="false" Include="assets\**" Visible="true" />
    <None Pack="false" Include="buildTransitive\**" Visible="true" />
    <None Pack="false" Include="project\**" Visible="true" />

    <None Pack="true"  Include="assets\src\include.editorconfig"              PackagePath="assets\src\.editorconfig" />

    <None Pack="true"  Include="buildTransitive\$(AssemblyName).props"        PackagePath="buildTransitive\" />
    <None Pack="true"  Include="buildTransitive\$(AssemblyName).targets"      PackagePath="buildTransitive\" />

    <None Pack="true"  Include="project\Project.props"                        PackagePath="project\" />
    <None Pack="true"  Include="project\Project.targets"                      PackagePath="project\" />
    <None Pack="true"  Include="project\StyleCop.Analyzers.ruleset"           PackagePath="project\" />
    <None Pack="true"  Include="project\stylecop.json"                        PackagePath="project\" />
    <None Pack="true"  Include="project\Symbols.FrameworkAPI.props"           PackagePath="project\" />
  </ItemGroup>
</Project>
