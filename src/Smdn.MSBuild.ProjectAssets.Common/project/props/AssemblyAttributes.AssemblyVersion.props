<Project>
  <PropertyGroup>
    <!--
      Override AssemblyVersion with the value of the property `AssemblyVersionSpecifiedByProjectReference`.
      `AssemblyVersionSpecifiedByProjectReference` is passed by the project that referencing current project.

      See targets/SetReferenceAssemblyVersionForProjectReference.targets for detail.
    -->
    <AssemblyVersion Condition="
      '$(AssemblyVersion)' == '' and
      '$(AssemblyVersionSpecifiedByProjectReference)' != ''
    ">$(AssemblyVersionSpecifiedByProjectReference)</AssemblyVersion>
  </PropertyGroup>
</Project>
