<Project>
  <Target
    Name="Assets_Deploy"
    BeforeTargets="BeforeBuild"
  >
    <Copy
      SourceFiles="%(SmdnBuildAssetFiles.Identity)"
      DestinationFiles="$(SmdnBuildAssetRootDirectory)%(SmdnBuildAssetFiles.Destination)"
      SkipUnchangedFiles="true"
      UseHardlinksIfPossible="false"
    />
  </Target>
</Project>
