<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net471;net472;net47;net462;net46;net452;net45;netstandard2.1;netstandard2.0;netstandard1.6</TargetFrameworks>
    <RootNamespace>Smdn</RootNamespace>
    <VersionPrefix>3.0</VersionPrefix>
    <VersionSuffix>beta4</VersionSuffix>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Label="metadata">
    <Title>Smdn.dll</Title>
    <Description>Smdn.dll, fundamental utility and extension library</Description>
    <CopyrightYear>2009</CopyrightYear>

    <!-- NuGet -->
    <PackageTags>utility;utils;extensions;mono;netframework;dotnet-core;dotnet-standard</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Smdn.Fundamentals.Buffers\Smdn.Fundamentals.Buffers.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Collections\Smdn.Fundamentals.Collections.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.CryptoTransform\Smdn.Fundamentals.CryptoTransform.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Encodings\Smdn.Fundamentals.Encodings.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Encodings.OctetEncoding\Smdn.Fundamentals.Encodings.OctetEncoding.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Exceptions\Smdn.Fundamentals.Exceptions.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Maths\Smdn.Fundamentals.Maths.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.PrintableEncodings.Base64\Smdn.Fundamentals.PrintableEncodings.Base64.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.PrintableEncodings.Hexadecimal\Smdn.Fundamentals.PrintableEncodings.Hexadecimal.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.PrintableEncodings.ModifiedBase64\Smdn.Fundamentals.PrintableEncodings.ModifiedBase64.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.PrintableEncodings.PercentEncoding\Smdn.Fundamentals.PrintableEncodings.PercentEncoding.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.PrintableEncodings.QuotedPrintable\Smdn.Fundamentals.PrintableEncodings.QuotedPrintable.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.PrintableEncodings.UUEncoding\Smdn.Fundamentals.PrintableEncodings.UUEncoding.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Streams\Smdn.Fundamentals.Streams.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Streams.Caching\Smdn.Fundamentals.Streams.Caching.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Streams.Extending\Smdn.Fundamentals.Streams.Extending.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Streams.Filtering\Smdn.Fundamentals.Streams.Filtering.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Streams.LineOriented\Smdn.Fundamentals.Streams.LineOriented.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.UInt24n\Smdn.Fundamentals.UInt24n.csproj" />
    <ProjectReference Include="..\Smdn.Fundamentals.Uuid\Smdn.Fundamentals.Uuid.csproj" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" Condition="$(TargetFramework.StartsWith('net45')) or $(TargetFramework.StartsWith('net46')) or $(TargetFramework.StartsWith('netstandard1'))" />
    <PackageReference Include="System.Memory" Version="4.5.4" Condition="$(TargetFramework.StartsWith('net4')) or $(TargetFramework.StartsWith('netstandard1')) or $(TargetFramework.StartsWith('netstandard2.0'))" />
  </ItemGroup>
</Project>
