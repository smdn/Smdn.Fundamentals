<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0;netcoreapp3.1;net45;netstandard2.1;netstandard2.0;netstandard1.6</TargetFrameworks>
    <VersionPrefix>3.0.3.1</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <PackageValidationBaselineVersion>3.0.0</PackageValidationBaselineVersion>
  </PropertyGroup>

  <PropertyGroup Label="assembly attributes">
    <CopyrightYear>2021</CopyrightYear>
  </PropertyGroup>

  <PropertyGroup Label="package properties">
    <PackageTags>uint24;uint48;24bit;48bit;interger</PackageTags>
  </PropertyGroup>

  <!-- enable feature 'generic math' -->
  <Import Project="..\FeatureGenericMath.props" />

  <ItemGroup>
    <ProjectReference VersionRange="[3.0.2,4.0.0)" Include="..\Smdn.Fundamental.Exception\Smdn.Fundamental.Exception.csproj" />
    <ProjectReference VersionRange="[3.1.0,4.0.0)" Include="..\Smdn.Fundamental.Shim\Smdn.Fundamental.Shim.csproj" Condition="$(TargetFramework.StartsWith('net4')) or $(TargetFramework.StartsWith('netstandard')) or $(TargetFramework.StartsWith('netcoreapp'))" />
    <PackageReference Include="System.Memory" />
    <PackageReference Include="System.ValueTuple" />
  </ItemGroup>

  <!-- import shim alias global usings -->
  <Import Project="..\Smdn.Fundamental.Shim\Smdn.Fundamental.Shim.ShimAliasGlobalUsings.targets" />

  <!-- UInt24n templates -->
  <ItemGroup>
    <UInt24nTemplateFile Include="UInt24nTemplates/TUInt24n*.cs" />
  </ItemGroup>

  <PropertyGroup>
    <UInt24nTemplateExpandingDirectory>$(BaseIntermediateOutputPath)</UInt24nTemplateExpandingDirectory>
  </PropertyGroup>

  <!-- TODO: use source generators -->
  <Import Project="UInt24nTemplates.targets" />
</Project>
