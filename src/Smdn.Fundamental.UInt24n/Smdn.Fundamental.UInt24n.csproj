<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0;netcoreapp3.1;net45;netstandard2.1;netstandard2.0;netstandard1.6</TargetFrameworks>
    <VersionPrefix>3.0.4</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <PackageValidationBaselineVersion>3.0.0</PackageValidationBaselineVersion>
  </PropertyGroup>

  <PropertyGroup Label="assembly attributes">
    <CopyrightYear>2021</CopyrightYear>
  </PropertyGroup>

  <PropertyGroup Label="package properties">
    <PackageTags>uint24;uint48;24bit;48bit;interger</PackageTags>
  </PropertyGroup>

  <!-- to enable the 'generic math' feature, uncomment this -->
  <!--
  <Import Project="..\FeatureGenericMath.props" />
  -->

  <ItemGroup>
    <ProjectOrPackageReference ReferencePackageVersion="[3.0.3,4.0.0)" Include="..\Smdn.Fundamental.Exception\Smdn.Fundamental.Exception.csproj" />
    <PackageReference Include="System.Memory" />
    <PackageReference Include="System.ValueTuple" />
  </ItemGroup>

  <ItemGroup Label="Smdn.Fundamental.Shim package reference">
    <PackageReference Include="Smdn.Fundamental.Shim" Version="[3.1.4,4.0.0)" />
    <!-- references only for shim alias global usings -->
    <PackageReference
      Update="Smdn.Fundamental.Shim"
      PrivateAssets="all"
      IncludeAssets="build"
      Condition="!(
        $(TargetFramework.StartsWith('net4')) or
        $(TargetFramework.StartsWith('netstandard')) or
        $(TargetFramework.StartsWith('netcoreapp'))
      )"
    />
  </ItemGroup>

  <!--
    To use project references, disable PackageReference above and instead enable the following configurations.

    <ItemGroup Label="Smdn.Fundamental.Shim project reference">
      <ProjectReference
        Include="..\Smdn.Fundamental.Shim\Smdn.Fundamental.Shim.csproj"
        Condition="$(TargetFramework.StartsWith('net4')) or $(TargetFramework.StartsWith('netstandard')) or $(TargetFramework.StartsWith('netcoreapp'))"
      />
    </ItemGroup>
    <ImportGroup Label="Smdn.Fundamental.Shim project reference">
      <Import Project="..\Smdn.Fundamental.Shim\Smdn.Fundamental.Shim.ShimAliasGlobalUsings.targets" />
    </ImportGroup>
  -->

  <!-- UInt24n templates -->
  <ItemGroup>
    <UInt24nTemplateFile Include="UInt24nTemplates/TUInt24n*.cs" />
  </ItemGroup>

  <PropertyGroup>
    <UInt24nTemplateExpandingDirectory>$(BaseIntermediateOutputPath)</UInt24nTemplateExpandingDirectory>
  </PropertyGroup>

  <!-- TODO: use source generators -->
  <Import Project="UInt24nTemplates.targets" />
</Project>
