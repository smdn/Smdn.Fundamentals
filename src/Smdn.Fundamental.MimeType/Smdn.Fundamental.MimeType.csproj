<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Nullable>enable</Nullable>
    <TargetFrameworks>net6.0;net471;net45;netstandard2.1;netstandard2.0;netstandard1.6;netstandard1.3</TargetFrameworks>
    <VersionPrefix>3.1.0</VersionPrefix>
    <VersionSuffix></VersionSuffix>
    <PackageValidationBaselineVersion>3.0.0</PackageValidationBaselineVersion>
  </PropertyGroup>

  <PropertyGroup Label="assembly attributes">
    <CopyrightYear>2021</CopyrightYear>
  </PropertyGroup>

  <PropertyGroup Label="package properties">
    <PackageTags>MIME;MIME-type;media-type;content-type;RFC2046;RFC2077;RFC6838;RFC8081</PackageTags>
  </PropertyGroup>

  <!-- suppress warning of tuple element naming to maintain API compatibility if version is less than 4.0.0 -->
  <PropertyGroup Condition="$([MSBuild]::VersionLessThan('$(VersionPrefix)', '4.0.0'))">
    <DefineConstants>$(DefineConstants);API_VERSION_3_X_X</DefineConstants>
  </PropertyGroup>

  <!-- enable feature 'generic math' -->
  <Import Project="..\FeatureGenericMath.props" />

  <ItemGroup>
    <ProjectOrPackageReference ReferencePackageVersion="[3.0.3,4.0.0)" Include="..\Smdn.Fundamental.Exception\Smdn.Fundamental.Exception.csproj" />
    <PackageReference Include="System.Memory" />
    <PackageReference Include="System.ValueTuple" />
    <PackageReference Include="System.Runtime.InteropServices.RuntimeInformation" />
    <PackageReference Include="Microsoft.Win32.Registry" />
  </ItemGroup>
</Project>
